<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    //animated layout children
    <style name="SummerTextView" parent="@android:style/Widget.TextView">
        <item name="android:background">@drawable/summer_text_background</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="WinterTextView" parent="@android:style/Widget.TextView">
        <item name="android:background">@drawable/winter_text_background</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SummerProfileCIV">
        <item name="civ_border_width">1dp</item>
        <item name="civ_border_color">@android:color/white</item>
        <item name="android:src">@drawable/john_snow_200_200</item>
    </style>

    <style name="WinterProfileCIV">
        <item name="civ_border_width">1dp</item>
        <item name="civ_border_color">@android:color/black</item>
        <item name="android:src">@drawable/night_king_200x200</item>
    </style>


</resources>
